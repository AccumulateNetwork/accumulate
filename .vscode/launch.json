    "version": "0.2.0",
    "configurations": [
        {
            "name": "Init DevNet",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/accumulated",
            "args": ["init", "devnet", "-w", "${workspaceFolder}/.nodes", "--reset", "-b", "1", "-v", "1", "-f", "0"]
        },
        {
            "name": "Run DevNet",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/accumulated",
            "args": ["run", "devnet", "-w", "${workspaceFolder}/.nodes", "--truncate"]
        },
        {
            "name": "Run Node",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/accumulated",
            "args": ["run", "-w", "${workspaceFolder}/.nodes/dn", "-n", "0", "--truncate"]
        }
    ]
}