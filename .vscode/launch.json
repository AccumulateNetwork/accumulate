  "version": "0.2.0",
  "configurations": [
    {
      "name": "Init DevNet",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/accumulated",
      "args": [
        "init",
        "devnet",
        "-w",
        "${workspaceFolder}/.nodes",
        "--reset",
        "-b",
        "1",
        "-v",
        "1",
        "-f",
        "0"
      ]
    },
    {
      "name": "Run DevNet",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/accumulated",
      "args": [
        "run",
        "devnet",
        "-w",
        "${workspaceFolder}/.nodes",
        "--truncate"
      ]
    },
    {
      "name": "Run Dual",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/accumulated",
      "args": [
        "run-dual",
        "--truncate",
        "${workspaceFolder}/.nodes/dn/Node0",
        "${workspaceFolder}/.nodes/bvn0/Node0",
      ]
    },
    {
      "name": "Run Node",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/accumulated",
      "args": [
        "run",
        "-w",
        "${workspaceFolder}/.nodes/dn",
        "-n",
        "0",
        "--truncate"
      ]
    },
    {
      "name": "Generate Test Data",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/tools/cmd/gen-testdata",
      "cwd": "${workspaceFolder}",
      "args": ["${workspaceFolder}/.testdata/sdk.json"]
    },
    {
      "name": "Run CLI",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/accumulate",
      "env": {
        "ACC_API": "local"
      },
      "cwd": "${workspaceFolder}",
      "args": [
        // "tx",
        // "get",
        // "-j",
        // "97de5192c4e0b199a2bf978e7f4a88367bf03412c1ead814e0b4dc0803809ea6"

        // "data",
